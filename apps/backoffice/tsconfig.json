{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "lib":  [
                                        "ES2022",
                                        "DOM"
                                    ],
                            "module":  "ESNext",
                            "moduleResolution":  "Bundler",
                            "jsx":  "preserve",
                            "allowJs":  false,
                            "strict":  true,
                            "noEmit":  true,
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ]
                                      },
                            "types":  [
                                          "node"
                                      ],
                            "skipLibCheck":  true,
                            "incremental":  true,
                            "esModuleInterop":  true,
                            "resolveJsonModule":  true,
                            "isolatedModules":  true,
                            "plugins":  [
                                            {
                                                "name":  "next"
                                            }
                                        ]
                        },
    "include":  [
                    "app",
                    "db",
                    "lib",
                    "pages",
                    "components",
                    "next-env.d.ts",
                    ".next/types/**/*.ts"
                ],
    "exclude":  [
                    "node_modules"
                ]
}